<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonitorAnadir">

    <EditText
        android:id="@+id/input_activo_anadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Activo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/monitor_anadir"
        app:layout_constraintStart_toStartOf="@+id/monitor_anadir"
        app:layout_constraintTop_toBottomOf="@+id/monitor_anadir" />

    <EditText
        android:id="@+id/input_anio_anadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="AÃ±o"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/spinner_pulgadas"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="@+id/spinner_pulgadas"
        app:layout_constraintTop_toBottomOf="@+id/spinner_pulgadas" />

    <EditText
        android:id="@+id/input_modelo_anadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="118dp"
        android:ems="10"
        android:hint="Modelo"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_anio_anadir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_anio_anadir"
        app:layout_constraintTop_toBottomOf="@+id/input_anio_anadir" />

    <Spinner
        android:id="@+id/spinner_pc"
        android:layout_width="195dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/input_activo_anadir"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="@+id/input_activo_anadir"
        app:layout_constraintTop_toBottomOf="@+id/input_activo_anadir" />

    <Spinner
        android:id="@+id/spinner_pulgadas"
        android:layout_width="195dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:entries="@array/monitor_pulgadas"
        app:layout_constraintEnd_toEndOf="@+id/teclado_Idioma_agregar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/teclado_Idioma_agregar"
        app:layout_constraintTop_toBottomOf="@+id/teclado_Idioma_agregar" />

    <Spinner
        android:id="@+id/teclado_Idioma_agregar"
        android:layout_width="195dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:entries="@array/monitor_marcas"
        app:layout_constraintEnd_toEndOf="@+id/spinner_pc"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_pc"
        app:layout_constraintTop_toBottomOf="@+id/spinner_pc" />

    <TextView
        android:id="@+id/monitor_anadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:text="Monitor"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>